{
    "compilerOptions": {
      "target": "es6",
      "module": "esnext",
      "allowJs": true,
      "sourceMap": true,
      "outDir": "./public/js",
      "strict": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "lib": [
        "dom",
        "dom.iterable",
        "esnext"
      ],
      //"noFallthroughCasesInSwitch": true,
      "moduleResolution": "node",
      //"resolveJsonModule": true,
      //"isolatedModules": true,
      //"noEmit": true,
      "jsx": "react-jsx"
    },
    "include": [
      "src/client/**/*"
    ],
    "exclude": [
      "node_modules"
    ]
  }
  